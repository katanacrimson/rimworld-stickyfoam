root = true

[Dockerfile,*.sh,*.yml,*.js,*.html,*.xml]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf

[*.csproj,*.sln]
charset = utf-8
indent_style = tab
end_of_line = crlf

[*]
insert_final_newline = true
trim_trailing_whitespace = true
